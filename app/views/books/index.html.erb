<div class="errors">
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
      <li>
         <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'users/user_info', user: @user %>
       <%= render 'books/new_book', book: @book %>
     </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= link_to "新しい順", books_path(sort: "created_at DESC") %> |
      <%= link_to "評価の高い順", books_path(sort: "rate DESC") %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th>Category</th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag book.user,:profile_image, size:"50x50", fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td><%= link_to book.category, book_search_path(keyword: book.category) %></td>
                <td id = "favorites_buttons<%= book.id %>">
                  <%= render partial: 'favorites/favorites_btn',locals: {book: book} %>
                </td>
                <td><p>コメント数:<%= book.book_comments.count %></p></td>
                <td>
                 <div id="star-rate<%= book.id %>"></div>
                  <script>
                  $('#star-rate<%= book.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= book.rate %>,
                  });
                  </script>
                </td>
                <td>閲覧数：<%= book.impressionist_count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

