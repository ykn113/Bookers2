<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <table class="table">
           <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
          </tr>
        </table>
        <%= link_to " ", edit_user_path(:id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
      <h2>New Book</h2>
        <%= form_with model:@book, local:true do |f|%>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body%>
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
        <table class="book_table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, size:"50x50", fallback: "no_image.jpg"%></br>
                  <%= link_to users_path(book.user_id)%>
                </td>
                
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>


        </table>
    </div>
  </div>
</div>

