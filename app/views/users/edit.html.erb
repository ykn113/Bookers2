<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="errors">
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <li>
              <% @user.errors.full_messages. each do |message| %>
                <%= message %>
              <% end %>
            </li>
          </ul>
          
        <% end %>
      </div>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label></br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>

      <div class="form-group">
        <label for="profile_image">Image</label></br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>

      <div class="form-group">
        <label for="introduction">Introduction</label></br>
        <%= f.text_area :introduction %>
      </div>

      <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>